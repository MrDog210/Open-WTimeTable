{
  "expo": {
    "name": "Open Wise TimeTable",
    "slug": "open-wtimetable",
    "version": "2.2.5",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mrdog210.OpenWTimeTable2"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A1A1A"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.mrdog210.OpenWTimeTable2"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ecedee",
          "image": "./assets/splash-icon.png",
          "dark": {
            "backgroundColor": "#1A1A1A",
            "image": "./assets/splash-icon.png"
          },
          "imageWidth": 200
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true
          },
          "ios": {}
        }
      ],
      [
        "react-native-android-widget",
        {
          //"fonts": ["./assets/fonts/Inter.ttf"],
          "widgets": [
            {
              "name": "NextUp",
              "label": "Next Up Widget",
              "description": "Shows the next lecture",
              "minWidth": "160dp",
              "minHeight": "80dp",
              //"targetCellWidth": 5,
              //"targetCellHeight": 2,
              "previewImage": "./assets/widget-preview/next.png",
              "updatePeriodMillis": 1800000, // Minimum is 1800000 (30 min),
              "resizeMode": "horizontal|vertical"
            },
            {
              "name": "Now",
              "label": "In Progress",
              "description": "Shows the lecture that is in progress",
              "minWidth": "160dp",
              "minHeight": "80dp",
              "previewImage": "./assets/widget-preview/now.png",
              "updatePeriodMillis": 1800000,
              "resizeMode": "horizontal|vertical"
            },
            {
              "name": "Today",
              "label": "Today",
              "description": "Shows the lecture for today",
              "minWidth": "160dp",
              "minHeight": "80dp",
              "previewImage": "./assets/widget-preview/today.png",
              "updatePeriodMillis": 3600000,
              "resizeMode": "horizontal|vertical"
            }
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "e0e07b4f-e428-4cc7-af85-1c25528b2bbc"
      }
    }
  }
}
